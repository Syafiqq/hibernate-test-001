<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>

        <!-- Database connection settings -->
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">
            jdbc:mysql://localhost:3306/test-hibernate?serverTimezone=Asia/Jakarta
        </property>
        <property name="connection.username">root</property>
        <property name="connection.password">Muhammad_Syafiq</property>

        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">1</property>

        <!-- SQL dialect -->
        <property name="dialect">org.hibernate.dialect.MariaDBDialect</property>

        <!-- Disable the second-level cache  -->
        <property name="cache.provider_class">org.hibernate.cache.internal.NoCachingRegionFactory</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">true</property>

        <!-- Drop and re-create the database schema on startup -->
        <property name="hbm2ddl.auto">create</property>

        <mapping resource="hbm/pojo/Event.hbm.xml"/>
        <mapping resource="hbm/pojo/Attendee.hbm.xml"/>
        <mapping resource="hbm/pojo/Address1.hbm.xml"/>
        <mapping resource="hbm/pojo/Address2.hbm.xml"/>
        <mapping resource="hbm/pojo/User.hbm.xml"/>
    </session-factory>

</hibernate-configuration>
